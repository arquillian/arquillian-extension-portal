<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure>
    <deployment>
        <exclusions>
            <module name="org.slf4j" />
        </exclusions>
        <dependencies>
            <module name="deployment.gatein" />
        </dependencies>
    </deployment>
    <module name="deployment.gatein">
        <dependencies>
            <module name="org.jboss.as.controller" />
            <module name="org.jboss.as.server" />
            <module name="org.jboss.as.web" />
            <module name="org.jboss.modules" />
            <module name="org.jboss.msc" />
            <module name="org.jboss.logging" />
            <module name="org.jboss.common-core" />
            <module name="deployment.gatein-lib" export="true" />
        </dependencies>
    </module>
    <module name="deployment.gatein-lib">
        <resources>
            <resource-root path="WEB-INF/lib/portlet-api-2.0.jar" />
            <resource-root path="WEB-INF/lib/slf4j-api-1.5.8.jar" />
            <resource-root path="WEB-INF/lib/slf4j-simple-1.5.8.jar" />
            <resource-root path="WEB-INF/lib/staxnav.core-0.9.6.jar" />
            <resource-root path="WEB-INF/lib/ccpp-1.0.jar" />
            <resource-root path="WEB-INF/lib/common-common-2.0.4-GA.jar" />
            <resource-root path="WEB-INF/lib/common-logging-2.0.4-GA.jar" />
            <resource-root path="WEB-INF/lib/pc-api-2.3.1-GA.jar" />
            <resource-root path="WEB-INF/lib/pc-controller-2.3.1-GA.jar" />
            <resource-root path="WEB-INF/lib/pc-portlet-2.3.1-GA.jar" />
            <resource-root path="WEB-INF/lib/wci-wci-2.1.1-GA.jar" />
            <resource-root path="WEB-INF/lib/wci-jboss7-2.2.0-Beta01-SNAPSHOT.jar" />
            <resource-root path="WEB-INF/lib/as7-extension-1.0.0-SNAPSHOT.jar" />
        </resources>
    </module>
</jboss-deployment-structure>